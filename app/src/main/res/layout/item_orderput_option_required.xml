<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
				name="optionGroupName"
				type="String" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/constraint_iorderput_option_required_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
				android:id="@+id/text_iorderput_option_required_title"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:ellipsize="end"
				android:maxLines="1"
				android:textSize="16sp"
				android:text="HOT/ICE 선택"
				android:layout_marginTop="20dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				tools:text="HOT/ICE 선택"
				tools:ignore="HardcodedText" />

		<TextView
				android:id="@+id/text_iorderput_option_required"
				style="@style/Text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/radius_8dp"
				android:backgroundTint="@color/rect_4483"
				android:paddingHorizontal="6dp"
				android:paddingVertical="2dp"
				android:text="필수"
				android:textColor="@color/rect_4475"
				android:textSize="12sp"
				android:visibility="visible"
				android:layout_marginEnd="20dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@id/text_iorderput_option_required_title"
				app:layout_constraintBottom_toBottomOf="@id/text_iorderput_option_required_title"
				tools:ignore="HardcodedText" />

		<LinearLayout
				android:id="@+id/linear_iorderput_option_required"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:orientation="vertical"
				android:layout_marginHorizontal="20dp"
				android:layout_marginBottom="20dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/text_iorderput_option_required_title"
				app:layout_constraintEnd_toEndOf="parent">

		</LinearLayout>


	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
